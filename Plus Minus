#include<stdio.h>
  
int main()
{
 int Size, i, a[10];
 int pos= 0, neg = 0, zero=0;
  
 printf("\n Enter size ofArray ");
 scanf("%d", &Size);
  
 for(i = 0; i < Size; i++)
 {
      scanf("%d", &a[i]);
 }
   
 for(i = 0; i < Size; i ++)
 {
   if(a[i] > 0)
   {
    pos++;
   }
   else if(a[i]<0)
   {
    neg++;
   }
   else
   zero++;
 }
   
 printf("\n Positive No Array = %d ", pos);
 printf("\n Negative Numbers in this Array = %d ", neg);
 printf("\n zero in this  Array = %d ",zero);


}
